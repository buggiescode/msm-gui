<h1>
  List of all directors
</h1>

<form action="/insert_director_record" method="post">
  <div>
    <label for="name">Name</label>
    <input type="text" name="name" id="name">
  </div>

  <div>
    <label for="dob">Date of Birth</label>
    <input type="text" name="dob" id="dob">
  </div>
  
  <div>
    <label for="bio">Bio</label>
    <input type="text" name="bio" id="bio">
  </div>
  
  <div>
    <label for="image">Image</label>
    <input type="text" name="image" id="image">
  </div>
  
  <button>
     Create director
  </button>
</form>

<hr>

<table border="1">
  <tr>
    <th>
      ID
    </th>

    <th>
      Image
    </th>

    <th>
      Name
    </th>

    <th>
      Dob
    </th>

    <th>
    </th>
  </tr>

  <% @list_of_directors.order({:dob => :desc}).each do |director| %>
  <tr>
    <td>
      <%= director.id %>
    </td>

    <td>
      <img src="<%= director.image %>" style="width:250px;">
    </td>

    <td>
      <%= director.name %>
    </td>

    <td>
      <%= director.dob %>
    </td>

    <td>
      <a href="/directors/<%= director.id %>">
        Show details
      </a>
    </td>
  </tr>
  <% end %>
</table>
